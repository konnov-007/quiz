<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="konnov.commr.vk.geographicalquiz.levelselector.LevelSelectorActivity"
    android:orientation="vertical"
    android:background="@drawable/background_level_selector">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <Button
        android:text="@string/level_one_button"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:id="@+id/button"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@android:color/holo_red_light"
        android:onClick="startQuestions" />

    <Button
        android:text="@string/level_two_button"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:onClick="startQuestions" />

    <Button
        android:text="@string/level_three_button"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@android:color/holo_red_light"
        android:layout_marginTop="10dp"
        android:onClick="startQuestions" />

    <Button
        android:text="@string/level_four_button"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:onClick="startQuestions" />
</LinearLayout>
